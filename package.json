{
  "name": "@patoro/robogarden",
  "version": "0.0.1",
  "description": "GGJ 2022",
  "private": true,
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "main": "./src/server.js",
  "scripts": {
    "clean": "shx rm -rf ./_dist",
    "dev": "nodemon --inspect --watch ./src/server.js ./src/server.js",
    "build": "npm run clean && shx mkdir -p ./_dist && shx cp -r ./src/* ./_dist",
    "start": "forever start ./src/server.js",
    "stop": "forever stop ./src/server.js",
    "restart": "forever restart ./src/server.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.2",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "@types/connect-livereload": "^0.6.0",
    "@types/express": "^4.17.13",
    "connect-livereload": "^0.6.1",
    "forever": "^4.0.2",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.15",
    "shx": "^0.3.4"
  }
}
